<div class="container mt-3">
  <div class="row">
    <div class="col-11 mx-auto text-center">
      <h1 id="bun-top">Eat-Da-Burger</h1>
    </div>
    <div class="col-10 mx-auto text-center">  
      <!-- burgers waiting to be eaten -->
      <div id="tomato" class="mb-2">
        <h2>Let's eat some burgers!</h2>
        <div class="row section-header text-left pl-3">
          <div class="col-6">Burger Name</div>
          <div class="col-6">Action</div>
        </div>
        <ul>
          {{#each burger}}
            {{#unless devoured}}
              {{> burger/burger-block devoured=true}}
            {{/unless}}
          {{/each}}
        </ul>
      </div>
      <!-- burgers that have been eaten -->
      <div id="lettuce" class="mb-2">
        <h2>Burgers that were eaten!</h2>
        <div class="row section-header text-left pl-3">
          <div class="col-6">Burger Name</div>
          <div class="col-6">Action</div>
        </div>
        <ul>
          {{#each burger}}
            {{#if devoured}}
              {{> burger/burger-block devoured=false}}
            {{/if}}
          {{/each}}
        </ul>
      </div>
      <div id="patty">
        <span><h2>Add a Burger</h2></span>
          <form class="create-form">
            <div class="form-group">
              <input type="text" id="ba" name="name">
            </div>
          <button type="submit" class="btn btn-lg btn-warning" >Add Burger!</button>
        </form>
      </div>
    </div>
    <div class="col-11 mx-auto text-center mt-2">
      <h1 id="bun-bottom">Burger Time!</h1>
    </div>
  </div>
</div>